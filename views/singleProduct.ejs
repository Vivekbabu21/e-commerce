<!DOCTYPE html>
<html>
<head>
    <title>Product List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%= product.name %>
                    <form action="/api/orders/<%= user._id %>" method="get" style="display: inline;">
                        <button type="submit" class="btn btn-primary">Orders</button>
                    </form>
                    <form action="/api/carts/<%= user._id %>" method="get" style="display: inline;">
                        <button type="submit" class="btn btn-primary">Cart</button>
                    </form></h5>
                    <img src="<%= product.imageUrl %>" alt="<%= product.name %>" style="width: 100px; height: auto;">
                    <p><strong>Brand:</strong> <%= product.brand %></p>
                    <p><strong>Price:</strong> <%= product.price %></p>
                    <p><strong>Category:</strong> <%= product.category.name %></p>
                    <p><strong>Stock:</strong> <%= product.stock %></p>
                    <h3>Reviews:</h3>
                    <% if (reviews.length > 0) { %>
                        <div class="row">
                            <% reviews.forEach(review => { %>
                                <div class="col-md-4 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <h6 class="card-subtitle mb-2 text-muted">Rating: <%= review.rating %> / 5</h6>
                                            <p class="card-text"><strong>Comment:</strong> <%= review.comment %></p>
                                        </div>
                                        <footer class="blockquote-footer">
                                            Reviewed By: <%= review.userDetails.name %>
                                        </footer>
                                        <footer class="blockquote-footer">
                                            Created At: <%= new Date(review.createdAt).toLocaleDateString('en-US') %>
                                        </footer>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                        <% } else { %>
                            <p>No reviews found.</p>
                        <% } %>
                

                   <form action="/api/carts" method="post">
                    <div class="mb-3">
                        <label for="quantity" class="form-label">Quantity:</label>
                        <input type="number" id="quantity" name="quantity" class="form-control" required>
                        <input type="hidden" name="productId" value="<%= product._id %>">

                        
                    </div>
                    <div>
                    <button type="submit" class="btn btn-primary">ADD TO CART</button>
                </form>
                <form action="/api/wishlist/add/<%= product._id %>" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-primary">Add to Wishlist</button>
                </form>
            </div>
            </div>
        </div>
    </div>
</body>
</html>

