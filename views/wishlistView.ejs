<!DOCTYPE html>
<html>
<head>
    <title>Your Wishlist</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card a {
            font-size: 18px;
            font-weight: 600;
            color: #333;
            text-decoration: none;
            display: block;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <h2>Your Wishlist
        <form action="/api/category" method="get" style="display: inline;">
            <button type="submit" class="btn btn-primary">Home</button>
        </form>
    </h2>
    <% if (wishlist.products.length > 0) { %>

    <div class="card">
        <ul>
            <% wishlist.products.forEach(product => { %>
                <li>
                    <a href="/api/products/<%= product._id %>"><%= product.brand %> <%= product.name %><br>
                    <img src="<%= product.imageUrl %>" alt="<%= product.name %>" style="width: 100px; height: auto;"></a>
                    <form action="/api/wishlist/remove/<%= product._id %>?_method=DELETE" method="post">
                        <button type="submit" class="btn btn-danger">Remove from Wishlist</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>
    <% } else { %>
        <p>No Items found.</p>
    <% } %>
</body>
</html>
